<div class="span9 offset1">
<h2>Credentials</h2>

  <% if @shop.empty? %>
      <%= form_for current_shop, :url => {:action => "update"} do |f| %>
        <div class="field">
          <%= f.label :login %>
          <%= f.text_field :login %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="field">
          <%= f.label :automatic_fulfillment %>
          <%= select(:shop, :automatic_fulfillment, options_for_select([[true,true], [false,false]])) %>
        </div>
        <div class="field">
          <%= f.label :submit %>
          <%= f.submit %>
        </div>
      <% end %>

  <% else %>

      <ul>
        <li>Shipwire Login: <span><%= @shop.login %></span></li>
        <li>Shipwire Password: <span><%= @shop.password %></span></li>
        <li>Automatic Fulfillment: <span><%= @shop.automatic_fulfillment %></span></li>
      </ul>

      <%= link_to "Update", edit_setting_path(@shop), :class => 'btn btn-primary' %>

  <% end %>
</div>